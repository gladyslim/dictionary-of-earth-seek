<link rel="stylesheet" href="/styles/bootstrap.min.css">
<script>
    $("#submit").click(function(){
        $.post("/entry/new", $("#createNewEntry").serialize(), function(data) {
            return true;
        });
    });
</script>

<div style='background:white;height: inherit;position: relative;overflow: scroll;'>
    <div class="container" style="padding-bottom: 100px; padding-top:38px">
        <div class="row">
            <div class="col-xs-12">
                <form method='post' id="createNewEntry">
                    <a style="padding-top: 15px; color:#4095cc" href="javascript:history.back()"><strong>&lt; back to article</strong></a>
                    <h2 style="text-transform:capitalize;padding-top:10px;"><%- key %></h2>
                    <input type="hidden" name="key" class="form-control" value=<%- key %>>
                    <div class="form-group" style="padding-bottom: 15px">
                        <% if (terms[0]) { %>
                        <section>
                            <img src=<%- terms[0].image %> style="object-fit:cover;width:400px;height:250px"/>
                        </section>
                        <%
                        }

                        if (terms.length > 0) {
                        %>
                        <section style="padding-top: 15px;">
                            <h4>Top definitions</h4>
                            <% for(let i = 0; i < terms.length; i++) { %>
                            <div style="padding-bottom:18px;" class="row">
                                <div class="col-md-1" style="color:#009142;">
                                    <span style="font-size:18px;top:5px" class="glyphicon glyphicon-thumbs-up"></span>
                                    <strong><%- terms[i].upvote_count %></strong>
                                </div>
                                <div style="font-size:16px;left: -20px; top:3px" class="col-md-11">
                                    <%- terms[i].description %>
                                </div>
                            </div>

                            <div class="row"></div>
                            <% } %>

                            <a style="padding-top: 15px; color:#4095cc" href=""><strong>See more definitions</strong></a>
                        </section>
                        <% } %>
                    </div>

                    <div class="form-group" style="padding-bottom: 10px">
                        <label for="definition">Add your definition</label>
                        <textarea type="text" name="description" class="form-control" required style='height:120px;'
                                  placeholder="Something you think people will understand in generation"></textarea>
                    </div>

                    <div class="form-group" style="padding-bottom: 10px">
                        <label for="source">Source of your definition (If any)</label>
                        <input type="text" name="source" class="form-control"
                               placeholder="E.g. Wikipedia, Merriam-Webster, etc">
                    </div>

                    <div class="form-group" style="padding-bottom: 10px">
                        <label for="author_name">Author</label>
                        <input type="text" name="source" class="form-control" required placeholder="Your name">
                    </div>

                    <div class="form-group" style="padding-bottom: 10px">
                        <label for="author_role">Role</label>
                        <input type="text" name="source" class="form-control" placeholder="Your role (e.g. Meteorologist)">
                    </div>
                    <div style="padding-top: 10px">
                        <button id="submit" type="submit" class="btn btn-default"
                                style="background-color:#fbb03b;color:white;border:none;border-radius:1px;width:150px;height:38ox;font-size:18px">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>